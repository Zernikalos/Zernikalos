[*.kt]
ktlint_code_style = official
ktlint_croot = true

[*]
indent_size = 4
tab_width = 4
indent_style = space
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4 # possible values: number (e.g. 2), "unset" (makes ktlint ignore indentation completely)
indent_style = space # or "tab"